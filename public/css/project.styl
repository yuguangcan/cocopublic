.project-section
  margin-top 40px
  a
    float left
    width 50%
    height 395px
    position relative
    img
      display block
      width 100%
      height 395px
    &:hover
      .mask
        opacity 1
  .mask
    position absolute
    left 0
    top 0
    width 100%
    height 395px
    line-height 395px
    text-align center
    color #000000
    font-size 19px
    background #ffffff
    opacity 0
    -webkit-transition opacity 0.5s
    transition opacity 0.5s
@media screen and (max-width: 1024px)
  .project-section
    a
      width 100%
      height auto
    .mask
      height 100%
      display flex
      justify-content center
      align-items center
      display -webkit-box
      -webkit-box-align center
      -webkit-box-pack center
