body
  padding 0
  width 1200px
.banner
  position relative
  width 100%
  height 100%
.logo
  position absolute
  top 30px
  left 30px
  z-index 10
  width 118px
  .normal
    display block
  .white
    display none
  &.show-white
    .normal
      display none
    .white
      display block
.bx-viewport, .bx-wrapper
  height 100% !important
  border 0
.bxslider, .bxslider li
  height 100%
.banner1
  background #ffffff
  img
    position absolute
    width 616px
    height 174px
    left 50%
    top 50%
    margin-left -313px
    margin-top -87px
.banner2,.banner4
  background-size cover
  background-repeat no-repeat
  background-position center
  height 100%
.banner3
  background #071c81
  position relative
  height 100%
  .img
    position absolute
    width 100%
    height 100%
    background-size contain
    background-position center
    background-repeat no-repeat
.about
  background #000000
  height 500px
  a
    display block
    position relative
  .title
    position absolute
    top 105px
    left 95px
    h3
      font-size 22px
      line-height 30px
      font-weight normal
      letter-spacing 1px
      margin 0
      color #ffffff
    p
      font-size 15px
      line-height 18px
      margin 5px 0
      letter-spacing 5px
      color #ffffff
  .intro
    color #ffffff
    font-size 15px
    width 600px
    position absolute
    top 165px
    right 100px
.nav
  background #e3e3e3
  .nav-item
    height 300px
    float left
    width 24.8%
    border-right 1px solid #ffffff
    color #000000
    display flex
    justify-content center
    align-items center
    display -webkit-box
    -webkit-box-align center
    -webkit-box-pack center
    &:last-child
      border none
  .h3-title
    display inline-block
    h3
      font-size 20px
      line-height 24px
      letter-spacing 2px
    p
      font-size 15px
      line-height 18px
      margin-top 5px
      letter-spacing 5px
.footer
  height 296px
  position relative
  background #ffffff
  div
    position absolute
    width 100%
    bottom 64px
    left 0
    text-align center
    font-size 14px
    color #231815
@media screen and (max-width: 1024px)
  body
    width 100%
  .logo
    left 20px
    top 20px
    width 59px
  .banner1
    img
      width 200px
      height 56px
      margin-left -100px
      margin-top -28px
  .about
    height 195px
    .title
      left 20px
      top 30px
      h3
        font-size 16px
      p
        font-size 11px
        letter-spacing 3px
    .intro
      top 80px
      right 20px
      width 53%
      font-size 9px
      height 90px
      overflow hidden
  .nav
    .nav-item
      height 94px
    .h3-title
      h3
        font-size 9px
        line-height 14px
        letter-spacing 1px
      p
        font-size 9px
        line-height 14px
        margin 2px 0 0
  .footer
    width 100%
    height 95px
    div
      font-size 7px
      bottom 20px