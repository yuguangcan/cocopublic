@import 'normalize.css'
html
  height 100%
  -webkit-tap-highlight-color rgba(0,0,0,0)
body
  position relative
  min-height 100%
  font-family: 'helvetica neue','microsoft yahei','pingfang sc','hiragino sans gb','stheiti',tahoma,sans-serif
  padding-bottom 240px
  padding-top 60px
  margin 0 auto
  color #000000
  line-height 2
  background #ffffff
  box-sizing border-box
a
  text-decoration none
.clearfix::after
  content:''
  display:block
  clear:both
  visibility:hidden
.container
  width 1200px
  margin 0 auto
.sub-container
  width: 880px;
  margin: 0 auto;
.h2-title
  text-align center
  h2
    font-size 60px
    line-height 70px
    font-weight normal
    letter-spacing 4px
    margin 0
  p
    font-size 24px
    line-height 26px
    margin 20px 0 0
    letter-spacing 10px
.h3-title
  text-align center
  h3
    font-size 28px
    line-height 34px
    font-weight normal
    letter-spacing 4px
    margin 0
  p
    font-size 22px
    line-height 24px
    margin 10px 0 0
    letter-spacing 10px
.text
  font-size 18px
  margin 0
  text-align center
.common-header
  display none
.common-footer
  position absolute
  width 100%
  background #000000
  bottom 0
  color #ffffff
  min-width 1200px
  .inner
    width 1200px
    height 240px
    margin 0 auto
    position relative
    .slogan
      position absolute
      top 72px
      left 60px
      font-size 30px
      line-height 1.3
      color #ffffff
    .links
      position absolute
      top 97px
      right 79px
      overflow hidden
      a
        color #ffffff
        font-size 16px
        float left
        margin-left 60px
        &:hover
          color #999999
    .share
      position absolute
      top 170px
      right 79px
      overflow hidden
      .share-intro
        float left
        color #4d4d4d
        font-size 15px
      .share-channels
        float left
        margin-left 47px
        a
          display inline-block
          margin-left 28px
          img
            display block
  .mobile-inner
    display none
    .nav
      background #e3e3e3
    .nav-item
      height 94px
      float left
      width 24.8%
      border-right 1px solid #e6e6e6
      color #000000
      display flex
      justify-content center
      align-items center
      display -webkit-box
      -webkit-box-align center
      -webkit-box-pack center
      &:last-child
        border none
    .h3-title
      display inline-block
      h3
        font-size 9px
        line-height 14px
      p
        font-size 9px
        line-height 14px
        margin 2px 0 0
    .footer
      width 100%
      min-width auto
      height 95px
      position relative
      background #000000
      div
        position absolute
        width 100%
        bottom 20px
        left 0
        text-align center
        color #ffffff
        font-size 7px
@media screen and (max-width: 1024px)
  body
    padding-bottom 189px
    padding-top 0
  .container
    width 100%
  .sub-container
    width auto
  .h2-title
    h2
      font-size 32px
      line-height 40px
      letter-spacing 2px
      margin 0
    p
      font-size 20px
      line-height 24px
      margin 20px 0
      letter-spacing 2px
  .h3-title
    h3
      font-size 18px
      line-height 24px
      letter-spacing 2px
      margin 0
    p
      font-size 14px
      line-height 18px
      margin 15px 0 0
      letter-spacing 4px
  .text
    font-size 14px
  .common-header
    display block
    height 82px
    border-bottom 1px solid #c8c5c4
    margin-bottom 25px
    img
      width 73px
      margin 0 auto
      padding-top 30px
      display block
  .common-footer
    min-width auto
    .inner
      display none
    .mobile-inner
      display block