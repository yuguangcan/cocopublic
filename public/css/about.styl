.text-section
  margin 25px auto 90px
.img-section
  margin 90px 0 95px
  img
    float left
    width 50%
.scopes
  margin 80px 0 100px
.scope
  float left
  margin-right 40px
  padding 80px 30px 0
  position relative
  .index
    font-size 21px
    text-align center
    position absolute
    top 0
    left 0
    width 100%
    white-space nowrap
    line-height 1.5
  .detail
    border 1px solid #000000
    padding 0 30px
    height 130px
  .detail-info
    height 140px
    background #ffffff
    text-align center
    position relative
    top -5px
    display: table-cell;
    vertical-align: middle;
    font-size 15px
.vision
  margin 100px 0 120px
  text-align center
.cultures
  margin 80px auto 100px
  width 480px
  .culture
    float left
    width 25%
    text-align center
  .inner
    width 80px
    height 80px
    line-height 80px
    border-radius 50%
    border 1px solid #bbbbbb
    font-size 20px
    text-align center
    display inline-block
@media screen and (max-width: 1024px)
  .text-section
    margin 20px 18px 50px
  .img-section
    margin 50px 0 30px
  .scopes
    margin 25px auto 30px
  .scope
    float none
    margin 0 auto 30px
    padding 50px 30px 0
    text-align center
    .index
      font-size 12px
    .detail
      padding 0 20px
      height 75px
      display inline-block
    .detail-info
      font-size 10px
      height 85px
  .vision
    margin 25px auto 55px
  .cultures
    margin 25px auto 70px
    width 300px
    .inner
      width 40px
      height 40px
      line-height 40px
      font-size 10px